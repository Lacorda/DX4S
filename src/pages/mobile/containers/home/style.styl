.home
  .carousel
    height: px2rem(263)
    overflow: hidden

    img
      height: px2rem(263)
  .main
    padding: 0 px2rem(20)

  .title
    height: px2rem(80)
    padding: px2rem(20) 0
    clear: both

    div
      display: inline-block

    .title-content
      color: $color-A1
      font-size: px2rem(28)

    .title-more
      font-size: px2rem(25.8)
      a
        color: #666666

  .card
    width: px2rem(346)
    height: px2rem(258)
    padding: px2rem(8)
    background-color: white
    box-shadow: 0 0 px2rem(10) #e2e2e2
    margin-bottom: px2rem(20)
    font-size px2rem(24)
    float: left
    position: relative
    .card-face
      width: px2rem(329)
      height: px2rem(160)
      margin: 0 auto px2rem(16)
      position: relative

      a
        display: inline-block
        height: 100%

      .card-face-tag
        position: absolute
        bottom: 0
        right: 0
        min-width: px2rem(80)
        line-height: px2rem(28)
        font-size: px2rem(22)
        color: white
        padding: 0 px2rem(10)
        text-align: center

      .card-face-tag.new
        background-color: #f48644

      .card-face-tag.series
        background-color: #ffb800

      .card-face-tag.mini
        background-color: #83c751

      img
        width: 100%
        height: 100%

    .card-content
      line-height: px2rem(30)
      height: px2rem(56)
      overflow: hidden
      white-space normal !important
      display -webkit-box
      -webkit-line-clamp 2
      -webkit-box-orient vertical
      text-overflow ellipsis
      .red
        color red
      .blue
        color #38ACFF
      .orange
        color: orange
      .a1
        color $color-A1
      .b3
        color $color-B3
      .z2
        color $color-Z2

    .status-info
      position absolute
      left 0
      bottom 0
      width 100%
      padding-left px2rem(5)
      font-size px2rem(22)
      height px2rem(32)
      line-height px2rem(32)
      background-color #000
      opacity 0.6
      overflow hidden
      color #fff
  .card.left
    margin-right: px2rem(17)

  .blank
    line-height px2rem(80)
  .bottomBlank
    height 1.3rem
  .nomsg
    text-align center
    img
      width px2rem(280)
      height px2rem(280)
      margin-top: px2rem(-100)
    button
      margin-top px2rem(20)
      font-size:px2rem(30)
  .fadein
    opacity 100

.sign-in
  position fixed
  z-index 999
  bottom px2rem(130)
  right px2rem(20)
  background url("./assets/icon_signin.png") no-repeat center
  background-size px2rem(134) px2rem(119)
  width px2rem(134)
  height px2rem(119)
  text-align center
  > a
    display block
    width 100%
    height 100%
    padding-top px2rem(78)
    font-size px2rem(16)
    color $color-Z2

