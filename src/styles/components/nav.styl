body.fixed-navbar-top
  padding-top $navbar-height !important

.navbar
  &.navbar-static-top
    position fixed
    z-index 999
    top 0
    left 0
    right 0
    height $navbar-height
    background-color #f5f5f5
    border-bottom 1px solid #dcdcdc
    line-height $navbar-height
    text-align center
    font-size px2rem(34)
  .inner
    position relative
  .navbar-nav
    position absolute
    top 0
    padding-left px2rem(20)
    padding-right px2rem(20)
    &.nav-back
      left 0
      font-size px2rem(44)
    &.navbar-right
      right 0
      text-align right
